<%- include('header') %>

<div class="text-center center-div" id="signup">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Signup System</h2>
            <span>Create a new account</span>
        </div>
        <form action="/route/signup" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" name="email">
                <small class="form-text text-muted text-left">Enter your email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
        <a href="/route/login">Already have an account? Log in here</a>
    </div>
</div>

<%- include('footer') %>
